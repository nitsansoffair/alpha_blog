<% if @article.errors.any? %>
  <h2>Errors</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %><br/>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %><br/>
    <div class="col-sm-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12 offset-sm-2">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="col-sm-12 offset-5">
    [ <%= link_to "Back", articles_path %> ]
  </div>
<% end %>