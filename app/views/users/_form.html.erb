<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @user do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-sm-2 col-form-label" %><br/>
        <div class="col-sm-12">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %><br/>
        <div class="col-sm-12">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label" %><br/>
        <div class="col-sm-12">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
      <div class="col-sm-12">
        [ <%= link_to "Back", articles_path %> ]
      </div>
    <% end %>
  </div>
</div>